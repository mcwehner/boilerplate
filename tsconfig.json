{
    "compilerOptions": {
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "outDir": "dist",
        "rootDir": "src",
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext",
        "types": ["chrome"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
